<%- include('partials/header', { title: post.title }) %>

<div class="row" style="margin-top: 30px;">
  <div class="col s12 m8 offset-m2">
    <div class="card">
      <div class="card-content">
        <span class="card-title"><%= post.title %>
        <% if (post.public) { %>
          (public)
        <% } else { %>
          (private)
        <% } %>
        </span>
        <p><%- post.content %></p>
      </div>
      <% if (ownBlog) { %>
        <div class="card-action">
          <a href="/edit" class="btn blue">Edit</a>
        </div>
      <% } %>
    </div>
  </div>
</div>

</body>
</html>
